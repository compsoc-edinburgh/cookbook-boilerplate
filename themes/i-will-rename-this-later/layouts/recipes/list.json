{{- $.Scratch.Add "index" slice -}}
{{- range (where .Pages "Layout" "recipe") -}}
    {{- $.Scratch.Add "index" (dict
      "title" .Title
      "params" .Params
      "body" .Plain
      "permalink" .Permalink
      "relpermalink" .RelPermalink) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
